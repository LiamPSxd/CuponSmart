<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frgCrearCuentaPersonal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grisUltraLightGreek"
    tools:context=".ui.view.fragment.CrearCuentaPersonal">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scrollbarThumbVertical="@null">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tituloPersonal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="20dp"
                android:text="Ingrese sus datos personales"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:fontFamily="@font/gilroy_bold"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true" />

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tituloPersonal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardPersonal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginBottom="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/etqNombre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="110dp"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentTop="true"
                            android:hint="Nombre"
                            android:gravity="start|center"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textColorHint="@color/gris"
                            app:hintAnimationEnabled="true"
                            app:boxBackgroundMode="outline"
                            app:boxStrokeWidth="0dp"
                            app:boxCollapsedPaddingTop="10dp"
                            app:boxBackgroundColor="@color/blancoGreek"
                            app:boxCornerRadiusTopStart="25dp"
                            app:boxCornerRadiusTopEnd="25dp"
                            app:boxCornerRadiusBottomStart="25dp"
                            app:boxCornerRadiusBottomEnd="25dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txtNombre"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="16dp"
                                android:autofillHints="name"
                                android:inputType="textPersonName"
                                android:textColor="@color/black"
                                android:textSize="22sp"
                                android:textColorHighlight="@color/splash"
                                android:gravity="start|center" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/etqApellidoPaterno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/etqNombre"
                            android:hint="Apellido Paterno"
                            android:gravity="start|center"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textColorHint="@color/gris"
                            app:hintAnimationEnabled="true"
                            app:boxBackgroundMode="outline"
                            app:boxStrokeWidth="0dp"
                            app:boxCollapsedPaddingTop="10dp"
                            app:boxBackgroundColor="@color/blancoGreek"
                            app:boxCornerRadiusTopStart="25dp"
                            app:boxCornerRadiusTopEnd="25dp"
                            app:boxCornerRadiusBottomStart="25dp"
                            app:boxCornerRadiusBottomEnd="25dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txtApellidoPaterno"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="16dp"
                                android:autofillHints="name"
                                android:inputType="textPersonName"
                                android:textColor="@color/black"
                                android:textSize="22sp"
                                android:textColorHighlight="@color/splash"
                                android:gravity="start|center" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/etqApellidoMaterno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/etqApellidoPaterno"
                            android:hint="Apellido Materno"
                            android:gravity="start|center"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textColorHint="@color/gris"
                            app:hintAnimationEnabled="true"
                            app:boxBackgroundMode="outline"
                            app:boxStrokeWidth="0dp"
                            app:boxCollapsedPaddingTop="10dp"
                            app:boxBackgroundColor="@color/blancoGreek"
                            app:boxCornerRadiusTopStart="25dp"
                            app:boxCornerRadiusTopEnd="25dp"
                            app:boxCornerRadiusBottomStart="25dp"
                            app:boxCornerRadiusBottomEnd="25dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txtApellidoMaterno"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="16dp"
                                android:autofillHints="name"
                                android:inputType="textPersonName"
                                android:textColor="@color/black"
                                android:textSize="22sp"
                                android:textColorHighlight="@color/splash"
                                android:gravity="start|center" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/etqTelefono"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/etqApellidoMaterno"
                            android:hint="Número de Teléfono"
                            android:gravity="start|center"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textColorHint="@color/gris"
                            app:counterEnabled="true"
                            app:counterMaxLength="10"
                            app:counterTextColor="@color/black"
                            app:hintAnimationEnabled="true"
                            app:boxBackgroundMode="outline"
                            app:boxStrokeWidth="0dp"
                            app:boxCollapsedPaddingTop="10dp"
                            app:boxBackgroundColor="@color/blancoGreek"
                            app:boxCornerRadiusTopStart="25dp"
                            app:boxCornerRadiusTopEnd="25dp"
                            app:boxCornerRadiusBottomStart="25dp"
                            app:boxCornerRadiusBottomEnd="25dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txtTelefono"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="16dp"
                                android:autofillHints="phone"
                                android:inputType="phone"
                                android:textColor="@color/black"
                                android:textSize="22sp"
                                android:textColorHighlight="@color/splash"
                                android:gravity="start|center" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/etqFechaNacimiento"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/etqTelefono"
                            android:hint="Fecha de Nacimiento"
                            android:gravity="start|center"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textColorHint="@color/gris"
                            app:hintAnimationEnabled="true"
                            app:boxBackgroundMode="outline"
                            app:boxStrokeWidth="0dp"
                            app:boxCollapsedPaddingTop="10dp"
                            app:boxBackgroundColor="@color/blancoGreek"
                            app:boxCornerRadiusTopStart="25dp"
                            app:boxCornerRadiusTopEnd="25dp"
                            app:boxCornerRadiusBottomStart="25dp"
                            app:boxCornerRadiusBottomEnd="25dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txtFechaNacimiento"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="16dp"
                                android:inputType="none"
                                android:textColor="@color/black"
                                android:textSize="22sp"
                                android:textColorHighlight="@color/splash"
                                android:gravity="start|center" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnContinuar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/cardPersonal"
                    android:focusable="true"
                    app:backgroundTint="@color/naranjado"
                    app:maxImageSize="40dp"
                    app:srcCompat="@drawable/continuar"
                    app:tint="@color/black"
                    app:elevation="21dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tituloPersonal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/foto"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:elevation="0dp"
                    android:src="@drawable/usuario"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="6dp"
                    app:civ_circle_background_color="@color/white" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnCambiarFoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="140dp"
                    android:layout_marginEnd="45dp"
                    android:layout_alignTop="@+id/foto"
                    android:layout_alignEnd="@+id/foto"
                    app:backgroundTint="@color/naranjado"
                    app:tint="@color/black"
                    app:fabSize="normal"
                    app:maxImageSize="35dp"
                    app:srcCompat="@drawable/camara" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>