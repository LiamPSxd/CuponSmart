<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grisUltraLightGreek">

    <ImageView
        android:id="@+id/drag"
        style="@style/DragHandleLight" />

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="TÃ­tulo"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:fontFamily="@font/gilroy_black"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/drag" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtTitulo">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtContenido"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Contenido"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/gilroy_bold"
                android:gravity="start|center"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnCancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:layout_toStartOf="@+id/btnAceptar"
        android:layout_below="@+id/scrollView"
        android:fontFamily="@font/gilroy_bold"
        android:gravity="center"
        android:text="Cancelar"
        android:background="@color/transparent"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnAceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/scrollView"
        android:fontFamily="@font/gilroy_bold"
        android:gravity="center"
        android:text="Aceptar"
        android:textColor="@color/blancoGreek"
        android:textSize="18sp" />
</RelativeLayout>