<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="categorias">
    <select id="obtenerCategorias" resultType="modelo.pojo.Categoria">
        SELECT * FROM categoria
    </select>
    
    <select id="obtenerCategoriaPorId" resultType="modelo.pojo.Categoria" parameterType="Integer">
        SELECT * FROM categoria 
        WHERE id = #{id}
    </select>
    
    <select id="obtenerCategoriaPorNombre" resultType="modelo.pojo.Categoria" parameterType="String">
        SELECT * FROM categoria 
        WHERE nombre = #{nombre}
    </select>
    
    <insert id="registrarCategoria" parameterType="modelo.pojo.Categoria">
        INSERT INTO categoria(nombre) 
        VALUE (#{nombre})
    </insert>
    
    <update id="modificarCategoria" parameterType="modelo.pojo.Categoria">
        UPDATE categoria 
        SET nombre = #{nombre} 
        WHERE id = #{id}
    </update>
    
    <delete id="eliminarCategoria" parameterType="Integer">
        DELETE FROM categoria 
        WHERE id = #{id}
    </delete>
</mapper>